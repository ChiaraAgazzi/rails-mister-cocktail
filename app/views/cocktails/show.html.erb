<h1>cocktail</h1>
<h2><%= @cocktail.name %></h2>
<%= @cocktail.doses.each do |dose| %>
  <li><%= dose.content %></li>
  <%= link_to "Delete", dosed_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
<%= link_to "Index", cocktails_path %>
<%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail) %>

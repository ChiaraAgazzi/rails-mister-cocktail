<h1>cocktail</h1>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<h2><%= @cocktail.name %></h2>
<%= @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> of <%= dose.ingredient %></li>
  <%= link_to "Delete Dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
<%= link_to "Index", cocktails_path %>
<%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail) %>
